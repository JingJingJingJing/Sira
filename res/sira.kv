#:kivy 1.10.0
#:import AdvancedTextInput advancedtextinput.AdvancedTextInput

AdvancedTextInput:
    id: commandText
    text: app.config.get("Text", "username") + app.config.get("Text", "cmd_identifier")
    protected_len: len(self.text)
    background_color: [0, 0, 0, 1]
    focus: True
    font_size: app.config.get("Text", "font_size")
    cursor_color: [1, 1, 1, 1]
    foreground_color: [1, 1, 1, 1]
    padding: [20, 20, 20, 20]
    on_text_validate: app._on_command(self)
    on_tab: app._on_tab(self)
    on_ctrl_c: app._stop_interaction(self)